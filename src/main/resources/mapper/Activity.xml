<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.graduate_design.springboot.mapper.ActivityMapper">
    <update id="update">
        update activity
        <set>
            <if test="time != null">
                time = #{time},
            </if>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="organizer != null">
                organizer = #{organizer},
            </if>
            <if test="address != null">
                address = #{address},
            </if>
            <if test="detail != null">
                detail = #{detail}
            </if>
        </set>
        <where>
            activityID = #{activityID}
        </where>

    </update>
</mapper>